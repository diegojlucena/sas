<h1>Listing assets</h1>

<table>
  <tr>
    <th>Code</th>
    <th>Name</th>
    <th>Brand</th>
    <th>Model</th>
    <th>Buy price</th>
    <th></th>
    <th></th>
    <th></th>
  </tr>

<% @assets.each do |asset| %>
  <tr>
    <td><%= asset.code %></td>
    <td><%= asset.name %></td>
    <td><%= asset.brand %></td>
    <td><%= asset.model %></td>
    <td><%= asset.buy_price %></td>
    <td><%= link_to 'Show', asset %></td>
    <td><%= link_to 'Edit', edit_asset_path(asset) %></td>
    <td><%= link_to 'Destroy', asset, :confirm => 'Are you sure?', :method => :delete %></td>
  </tr>
<% end %>
</table>

